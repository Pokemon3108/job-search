<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    <welcome-file-list>-->
<!--        <welcome-file>/index.jsp</welcome-file>-->
<!--    </welcome-file-list>-->

    <error-page>
        <error-code>403</error-code>
        <location>/view/error/error403.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/view/error/error404.jsp</location>
    </error-page>

<!--    <error-page>-->
<!--        <error-code>500</error-code>-->
<!--        <location>/view/error/error500.jsp</location>-->
<!--    </error-page>-->

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/job/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>localizationFilter</filter-name>
        <url-pattern>/job/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/job/auth/*</url-pattern>
        <url-pattern>/job/employee/*</url-pattern>
        <url-pattern>/job/employer/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>roleFilter</filter-name>
        <url-pattern>/job/employee/*</url-pattern>
        <url-pattern>/job/employer/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>actionFilter</filter-name>
        <url-pattern>/job/*</url-pattern>
    </filter-mapping>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Hidden jsp</web-resource-name>
            <url-pattern>/view/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        </auth-constraint>
    </security-constraint>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>



</web-app>